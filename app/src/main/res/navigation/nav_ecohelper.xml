<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_ecohelper"
    app:startDestination="@id/DestHome">
    <fragment
        android:id="@+id/DestHome"
        android:name="com.example.ecohelper.fragment_home"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/NextToNews"
            app:destination="@id/newsFragment" />
    </fragment>


    <fragment
        android:id="@+id/organizationsFragment"
        android:name="com.example.ecohelper.OrganizationsFragment"
        android:label="fragment_organizations"
        tools:layout="@layout/fragment_organizations" />
    <fragment
        android:id="@+id/programmesFragment"
        android:name="com.example.ecohelper.ProgrammesFragment"
        android:label="fragment_programmes"
        tools:layout="@layout/fragment_programmes" />
    <fragment
        android:id="@+id/newsFragment"
        android:name="com.example.ecohelper.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news"/>
</navigation>