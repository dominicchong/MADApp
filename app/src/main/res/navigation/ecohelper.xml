<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ecohelper"
    app:startDestination="@id/home">
    <fragment
        android:id="@+id/home"
        android:name="com.example.ecohelper.home"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_createnewacc"
            app:destination="@id/createnewacc" />
        <action
            android:id="@+id/action_home_to_forgotpassword"
            app:destination="@id/forgotpassword" />
    </fragment>
    <fragment
        android:id="@+id/createnewacc"
        android:name="com.example.ecohelper.createnewacc"
        android:label="fragment_createnewacc"
        tools:layout="@layout/fragment_createnewacc" />
    <fragment
        android:id="@+id/forgotpassword"
        android:name="com.example.ecohelper.forgotpassword"
        android:label="fragment_forgotpassword"
        tools:layout="@layout/fragment_forgotpassword" />
</navigation>