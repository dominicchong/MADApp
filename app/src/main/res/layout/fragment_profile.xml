<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profilePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="434dp"
                android:layout_height="166dp"
                android:scaleType="fitXY"
                android:src="@drawable/profileHeader"
                tools:layout_editor_absoluteX="-12dp"
                tools:layout_editor_absoluteY="0dp" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="40dp"
                android:background="65AEDD"
                android:scaleType="fitCenter"
                android:src="@drawable/menu_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="391dp"
                android:layout_height="136dp"
                android:layout_marginTop="44dp"
                android:src="@drawable/profileicon"
                app:layout_constraintBottom_toTopOf="@+id/profileView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="121dp"
                android:layout_height="40dp"
                android:layout_marginStart="144dp"
                android:gravity="center"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintEnd_toStartOf="@+id/imageButton"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                app:layout_constraintVertical_bias="0.244" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="40dp"
                android:background="65AEDD"
                android:scaleType="fitCenter"
                android:src="@drawable/editicon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/profileView"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginBottom="24dp"
                android:src="@drawable/profileicon1"
                app:layout_constraintBottom_toTopOf="@+id/birthdayView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.194"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/profileText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:textSize="15dp"
                app:layout_constraintBottom_toTopOf="@+id/spaceProfile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.078"
                app:layout_constraintStart_toEndOf="@+id/profileView" />

            <TextView
                android:id="@+id/birthdayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="BirthDate"
                android:textSize="15dp"
                app:layout_constraintBottom_toTopOf="@+id/spaceBirthday"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.084"
                app:layout_constraintStart_toEndOf="@+id/birthdayView" />

            <TextView
                android:id="@+id/phoneText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="PhoneNumber"
                android:textSize="15dp"
                app:layout_constraintBottom_toTopOf="@+id/spacePhone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.088"
                app:layout_constraintStart_toEndOf="@+id/phoneView" />

            <TextView
                android:id="@+id/emailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Email"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.084"
                app:layout_constraintStart_toEndOf="@+id/emailView" />

            <ImageView
                android:id="@+id/birthdayView"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="76dp"
                android:layout_marginBottom="24dp"
                android:src="@drawable/birthday"
                app:layout_constraintBottom_toTopOf="@+id/phoneView"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/phoneView"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginBottom="32dp"
                android:src="@drawable/phoneno"
                app:layout_constraintBottom_toTopOf="@+id/emailView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.194"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/emailView"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/email"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.194"
                app:layout_constraintStart_toStartOf="parent" />

            <Space
                android:id="@+id/spaceProfile"
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                app:layout_constraintTop_toBottomOf="@+id/profileView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/lineProfile"
                android:layout_width="260dp"
                android:layout_height="0.9dp"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/spaceProfile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent" />

            <Space
                android:id="@+id/spaceBirthday"
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                app:layout_constraintTop_toBottomOf="@+id/birthdayView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/lineBirthday"
                android:layout_width="260dp"
                android:layout_height="0.9dp"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/spaceBirthday"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent" />

            <Space
                android:id="@+id/spacePhone"
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                app:layout_constraintTop_toBottomOf="@+id/phoneView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/linePhone"
                android:layout_width="260dp"
                android:layout_height="0.9dp"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/spacePhone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"  />

            <Space
                android:id="@+id/spaceEmail"
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                app:layout_constraintTop_toBottomOf="@+id/emailView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/lineEmail"
                android:layout_width="260dp"
                android:layout_height="0.9dp"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/spaceEmail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>