<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment">

    <TextView
        android:id="@+id/ecohelpertext"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@color/very_light_blue"
        android:fontFamily="@font/judsonitalic"
        android:gravity="bottom"
        android:paddingBottom="20dp"
        android:text="EcoHelper"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textDirection="inherit"
        android:textIsSelectable="false"
        android:textSize="44sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="117dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ecohelper_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/CNABtn"
        android:layout_width="120dp"
        android:layout_height="57dp"
        android:layout_marginBottom="80dp"
        android:background="#03A9F4"
        android:foregroundTint="#03A9F4"
        android:text="Sign Up"
        android:textColor="#321BB5"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/LoginEmail"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="67dp"
        android:background="@drawable/rect_login"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="text"
        android:padding="10dp"
        android:paddingStart="50dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ecohelpertext" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="or"
        app:layout_constraintBottom_toTopOf="@+id/CNABtn"
        app:layout_constraintEnd_toStartOf="@+id/dots1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dots2" />

    <TextView
        android:id="@+id/TVForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:padding="8dp"
        android:text="Forgot password?"
        android:textAllCaps="false"
        android:textColor="#696868"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/LoginPass"
        app:layout_constraintTop_toBottomOf="@+id/LoginPass" />

    <Button
        android:id="@+id/BtnLogin"
        android:layout_width="115dp"
        android:layout_height="57dp"
        android:layout_marginStart="148dp"
        android:layout_marginEnd="148dp"
        android:layout_marginTop="32dp"
        android:background="#03A9F4"
        android:text="Log in"
        android:textColor="#321BB5"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVForgotPassword" />

    <EditText
        android:id="@+id/LoginPass"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/rect_login"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:paddingStart="50dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginEmail" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="30dp"
        android:layout_height="26dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/toggle_button_background"
        android:textOff=""
        android:textOn=""
        app:layout_constraintEnd_toEndOf="@+id/LoginPass"
        app:layout_constraintTop_toTopOf="@+id/LoginPass" />

    <TextView
        android:id="@+id/dots2"
        android:layout_width="191dp"
        android:layout_height="19dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="25dp"
        android:text="- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
        app:layout_constraintBottom_toTopOf="@+id/CNABtn"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dots1"
        android:layout_width="191dp"
        android:layout_height="19dp"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="25dp"
        android:text="- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
        app:layout_constraintBottom_toTopOf="@+id/CNABtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_baseline_email_24"
        app:layout_constraintStart_toStartOf="@+id/LoginEmail"
        app:layout_constraintTop_toTopOf="@+id/LoginEmail" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:src="@android:drawable/ic_lock_idle_lock"
        app:layout_constraintStart_toStartOf="@+id/LoginPass"
        app:layout_constraintTop_toTopOf="@+id/LoginPass"
        app:tint="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>